<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Phần màu nền (chưa có progress) -->
    <item android:id="@android:id/background" android:height="3dp">
        <shape>
            <size android:height="3dp" />
            <solid android:color="@color/dusty_gray" /> <!-- Màu xám nhạt -->
        </shape>
    </item>

    <!-- Phần progress (trước thumb) -->
    <item android:id="@android:id/progress" android:height="5dp">
        <clip>
            <shape>
                <size android:height="5dp" /> <!-- Làm dày hơn phần nền -->
                <gradient
                    android:startColor="@color/cyan_light"
                    android:endColor="@color/dusty_gray"
                    android:angle="0" />
            </shape>
        </clip>
    </item>
</layer-list>
