<resources>
    <!-- Style tùy chỉnh cho Button -->
    <style name="SignInButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/signin_button_background</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginTop">24dp</item>
    </style>

    <style name="RoundedEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:background">@drawable/rounded_edittext</item>
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:textColor">@color/text_black</item>
    </style>
</resources>