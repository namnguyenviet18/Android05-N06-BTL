<resources>
    <!-- Style tùy chỉnh cho Button -->
    <style name="SignInButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/signin_button_background</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginTop">24dp</item>
    </style>

    <style name="RoundedEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:background">@drawable/rounded_edittext</item>
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textColorHint">@color/gray</item>
    </style>


    <style name="Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textSize">32sp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginBottom">24dp</item>
    </style>

    <style name="BlueButton">
        <item name="android:layout_width">350dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/button_blue_rounded</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="OtpBoxStyle">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/otp_box</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:inputType">number</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:maxLength">1</item> <!-- Sẽ cần gán bằng InputFilter trong code -->
    </style>

    <style name="PopupMenuStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="CustomPopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@color/app_background</item> <!-- Màu nền của menu -->
        <item name="android:textColor">@color/text_white</item> <!-- Màu chữ của menu -->
    </style>

    <style name="RoundedDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">@drawable/rounded_dialog_background</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:backgroundTint">#333333</item> <!-- Nền tối cho dialog -->
    </style>

</resources>